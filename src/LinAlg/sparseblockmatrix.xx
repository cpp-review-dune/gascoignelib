template<class B>
void SparseBlockMatrix<B>::Jacobi(GlobalVector& x) const
{    
  for(int i=0; i< n(); i++)
    {	  
      double a = 1. / (*mat(US.diag(i)))(0,0);
      *(x.start(i)) *= a; 
    }
}   

