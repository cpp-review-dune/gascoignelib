template<class B>
void SparseBlockMatrix<B>::transpose()
{
  for(int i=0; i<US.n(); i++)
    {
      int diag = US.diag(i);
      smat[diag].transpose();
      for(int pos = diag+1; pos<US.stop(i); pos++)
	{
	  int j    = US.col(pos);
	  int tpos = US.Find(j,i);
	  smat[pos].transpose(smat[tpos]);
	}
    }
}

