template<class B>
std::ostream& SparseBlockMatrix<B>::Write(std::ostream &os) const
{
  os << n() << "\t" << ntotal() << std::endl << std::endl;
  os << "Diag\n";
  for(int i=0; i<US.n(); i++)
    {
      os <<  smat[US.diag(i)] << " ";
    }
  os << std::endl << std::endl;
  for(int i=0; i<US.n(); i++)
    {
      //const int*    cp = &(US.col(US.start(i)));
      for(int pos = US.start(i); pos<US.stop(i); pos++)
	{
	  os << *mat(pos) << " ";
	}
      os << std::endl;
    }
  return os;
}
